{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./public",
    "target": "ES2020",
    "module": "ES6",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],  // ← Ajouté pour le navigateur
    "types": [],
    "sourceMap": true,
    "declaration": false,                      // ← Désactivé pour le frontend
    "declarationMap": false,                   // ← Désactivé pour le frontend
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,      // ← Important pour le frontend
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true                  // ← Utile pour les imports JSON
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public"],
  "include": ["src"]
}
